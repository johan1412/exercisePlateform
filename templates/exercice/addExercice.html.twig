{% extends 'base.html.twig' %}

{% block content %}

    <div class="card bg-light mt-5 mb-3 p-0 col-md-6 offset-md-3" style="color:black;">
        <h3 class="text-center card-header pl-0 pr-0">Nouvel exercice</h3>
        <div class="card-body p-3">
            <div class="card-text">
                {{ form_start(form) }}
                    <div class="form-group">
                        <label>Titre de l'exercice</label>
                        {{ form_errors(form.titre) }}
                        <div>
                            {{ form_widget(form.titre, {'attr': {'placeholder': 'titre', 'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Description de l'exercice</label>
                        {{ form_errors(form.description) }}
                        <div>
                            {{ form_widget(form.description, {'attr': {'placeholder': 'description de l\'exercice', 'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Les instructions</label>
                        <ul id="instructions_list" style="list-style:none;">
                            <li class="row my-3"><input type="text" class="form-control col-8" name="instruction1" required></li>
                            <li class="row my-3"><input type="text" class="form-control col-8" name="instruction2" required></li>
                        </ul>
                        <div id="addInstruction" type="button" class="btn btn-secondary px-1 py-0"><i class="fa fa-plus fa-lg mr-2"></i>ajouter une ligne</div>
                    </div>
                    <input type="hidden" name="compteur" id="compteur" value="0" >
                    <div class="row mt-4 mb-5 d-flex justify-content-center">
                        <button class="btn btn-info" type="submit">Ajouter</button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}
