{% extends 'base.html.twig' %}


{% block body %}

    <div class="col-md-10 offset-md-1 col-12">
        <div class="display-4 mt-5" style="font-size:300%;">Vos cours</div>
        <hr class="bg-light">
        <div class="col-md-10 offset-md-1 mt-5 pt-1 mb-5">
            {% if coursInscrit is empty %}
                <strong>Vous n'êtes inscrit à aucun cours pour le moment.</strong>
            {% else %}
                <div class="container mb-4">
                    {% for message in app.flashes('success') %}
                        <div class="row">
                            <div class="col-md-6 offset-3 col-10 alert alert-success mt-1 mb-1">{{ message }}</div>
                        </div>
                    {% endfor %}
                </div>
                <div class="card-deck row px-5" style="color:black;">
                    {% for elt in coursInscrit %}
                        <div class="col-lg-4 col-md-4 col-sm-12 px-0 py-2">
                            <div class="card">
                                <div class="card-body p-4 text-center">
                                    <h5 class="card-title">{{ elt.titre }}</h5>
                                    <p class="card-text mt-4 mb-4"> {{ elt.exercices | length }} exercice(s) disponible(s)</p>
                                    <a href="{{ path('show_cours', {'id': elt.id}) }}"><button class="btn btn-dark">accéder</button></a>
                                </div>
                                <small class="card-footer text-muted">crée par {{ elt.teacher.lastname }} {{ elt.teacher.firstname }}</small>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% endif %}
        </div>

        </br>

        <div class="display-4 mt-2" style="font-size:300%;">Cours disponibles</div>
        <hr class="bg-light">
        <div class="col-md-10 offset-md-1 mt-5 pt-1 mb-5">
            {% if coursNonInscrit is empty %}
                <strong>Il n'y  aucun cours auquel vous n'êtes pas inscrit.</strong>
            {% else %}
                <div class="container mb-4">
                    {% for message in app.flashes('success') %}
                        <div class="row">
                            <div class="col-md-6 offset-3 col-10 alert alert-success mt-1 mb-1">{{ message }}</div>
                        </div>
                    {% endfor %}
                </div>
                <div class="card-deck row px-5" style="color:black;">
                    {% for elt in coursNonInscrit %}
                        <div class="col-lg-4 col-md-4 col-sm-12 px-0 py-2">
                            <div class="card">
                                <div class="card-body p-4 text-center">
                                    <h5 class="card-title">{{ elt.titre }}</h5>
                                    <p class="card-text mt-4 mb-4"> {{ elt.exercices | length }} exercice(s) disponible(s)</p>
                                    <a href="{{ path('register_cours', {'id': elt.id}) }}"><button class="btn btn-dark">s'inscrire</button></a>
                                </div>
                                <small class="card-footer text-muted">crée par {{ elt.teacher.lastname }} {{ elt.teacher.firstname }}</small>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% endif %}
        </div>
    </div>

{% endblock %}