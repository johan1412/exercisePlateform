{% extends 'base.html.twig' %}

{% block content %}

    <div class="col-md-8 col-12 mt-5">
        <div class="display-4 d-inline" style="font-size:220%;">{{ cours.titre }}</div>
        <a href="{{ path('new_exercice') }}" class="pl-5 d-inline"><button class="btn btn-light mb-3"><i class="fa fa-plus"></i> nouvel exercice</button></a>
        <hr style="background-color:white;">
    </div>
    <div class="mt-5">
        {% for exercice in exercices %}
            <div class="row bg-light p-3 my-4 d-flex justify-content-between" style="color:black;">
                <strong style="font-size:110%;">{{ exercice.titre }}</strong>
                <span style="font-size:100%;">{{ exercice.description }}</span>
                {% if is_granted("ROLE_TEACHER") %}
                    <a href="{{ path('res_exercice', {'id': exercice.id}) }}"><button class="btn btn-dark">r√©sultats</button></a>
                {% elseif is_granted("ROLE_STUDENT") %}
                    <a href="{{ path('show_exercice', {'id': exercice.id}) }}"><button class="btn btn-dark">faire l'exercice</button></a>
                {% endif %}
            </div>
        {% endfor %}
    </div>

{% endblock %}