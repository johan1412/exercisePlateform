{% extends 'base.html.twig' %}

{% block content %}

    <div class="card bg-light mt-5 mb-3 p-0 col-md-6 offset-md-3" style="color:black;">
        <h3 class="text-center card-header pl-0 pr-0">Nouveau cours</h3>
        <div class="card-body p-3">
            <div class="card-text">
                {{ form_start(form) }}
                    <div class="row d-flex justify-content-between pl-5 pr-5">
                        <div class="form-group">
                            <label>Titre du cours</label>
                            {{ form_errors(form.titre) }}
                            <div>
                                {{ form_widget(form.titre, {'attr': {'placeholder': 'titre', 'class': 'form-control'}}) }}
                            </div>
                        </div>
                    </div>
                    <div class="row mt-4 mb-5 d-flex justify-content-center">
                        <button class="btn btn-info" type="submit">Ajouter</button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}