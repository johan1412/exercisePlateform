{% extends 'base.html.twig' %}

{% block content %}
        
    <div class="card bg-light mb-3 p-0 col-md-6 offset-md-3">
        <h3 class="text-center card-header pl-0 pr-0">Inscription</h3>
        <div class="card-body p-3">
            <div class="card-text">
                {{ form_start(form) }}
                    <div class="row d-flex justify-content-between pl-5 pr-5">
                        <div class="form-group">
                            <label>Nouveau nom</label>
                            {{ form_errors(form.lastname) }}
                            <div>
                                {{ form_widget(form.lastname, {'attr': {'placeholder': 'nom', 'class': 'form-control'}}) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Nouveau prénom</label>
                            {{ form_errors(form.firstname) }}
                            <div>
                                {{ form_widget(form.firstname, {'attr': {'placeholder': 'prénom', 'class': 'form-control'}}) }}
                            </div>
                        </div>
                    </div>
                    <div class="row pl-5 pr-5">
                        <div class="form-group col-12 pl-0">
                            <label>email</label>
                            {{ form_errors(form.email) }}
                            <div>
                                {{ form_widget(form.email, {'attr': {'placeholder': 'email', 'class': 'form-control'}}) }}
                            </div>
                        </div>
                    </div>
                    <div class="row d-flex justify-content-between pl-5 pr-5">
                        <div class="form-group">
                            <label>Nouveau mot de passe</label>
                            {{ form_errors(form.password) }}
                            <div>
                                {{ form_widget(form.password, {'attr': {'placeholder': 'mot de passe', 'class': 'form-control'}}) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Répéter le mot de passe</label>
                            {{ form_errors(form.confirm_password) }}
                            <div>
                                {{ form_widget(form.confirm_password, {'attr': {'placeholder': 'mot de passe', 'class': 'form-control'}}) }}
                            </div>
                        </div>
                    </div>
                    <div class="row mt-4 mb-5 d-flex justify-content-center">
                        <button class="btn btn-info" type="submit">Valider</button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}